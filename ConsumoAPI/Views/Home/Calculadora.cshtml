
@{
    ViewData["Title"] = "Calculadora";
}


<div class="container">
    <h1 class="text-center pb-3">Calculadora</h1>

    <!-- Toast de alerta -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="liveToast" class="toast align-items-center text-white bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    Por favor, complete todos los campos antes de continuar.
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <div class="card-group">
        <div class="card">
            <div class="card-header bg-primary text-white">Rango</div>
            <div class="card-body">
                <div class="form-group">
                    <label for="inicio" class="col-sm-2 col-form-label">Inicio</label>
                    <input type="number" class="form-control" id="inicio" name="inicio" required>
                </div>

                <div class="form-group">
                    <label for="fin">Fin</label>
                    <input type="number" class="form-control" id="fin" name="fin" required>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-primary text-white">Tipo</div>
            <div class="card-body d-flex align-items-center">
                <div class="form-group">
                    <div class="form-check pb-5">
                        <input type="radio" class="form-check-input" id="par" name="tipo" value="par" required>
                        <label class="form-check-label" for="par">Par</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" id="impar" name="tipo" value="impar" required>
                        <label class="form-check-label" for="impar">Impar</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body d-flex align-items-end justify-content-center">
                <button type="button" class="btn btn-primary px-5" id="aceptar">Aceptar</button>
            </div>
        </div>
    </div>

    <hr>

    <div class="card-group">
        <div class="card">
            <div class="card-header bg-primary text-white">Seleccionar</div>
            <div class="card-body">
                <div class="form-group">
                    <label for="numero1">Seleccionar Primer Número</label>
                    <select class="form-control" id="numero1"></select>
                </div>

                <div class="form-group">
                    <label for="numero2">Seleccionar Segundo Número</label>
                    <select class="form-control" id="numero2"></select>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-primary text-white">Operaciones</div>
            <div class="card-body d-flex align-items-center">
                <div class="form-group">
                    <div class="form-check pb-4">
                        <input type="checkbox" class="form-check-input" id="suma" name="operaciones" value="suma">
                        <label class="form-check-label" for="suma">Suma</label>
                    </div>
                    <div class="form-check pb-4">
                        <input type="checkbox" class="form-check-input" id="resta" name="operaciones" value="resta">
                        <label class="form-check-label" for="resta">Resta</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="multiplicacion" name="operaciones" value="multiplicacion">
                        <label class="form-check-label" for="multiplicacion">Multiplicación</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-primary text-white">Resultados</div>
            <div class="card-body">
                <div class="d-flex justify-content-center pb-3">
                    <button type="button" class="btn btn-primary" id="realizar-operaciones">Realizar Operaciones</button>
                </div>
                <div class="resultado d-flex justify-content-center" id="resultado"></div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/calculadora.js"></script>

